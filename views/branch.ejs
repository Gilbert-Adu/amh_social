<!DOCTYPE html>
<html>
    <head>
           
                <title>Amhara Unity | <%= branch.name %></title>
              
            
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/png" sizes="32x32" href="./images/favicon-32x32.png">
        <link rel="stylesheet" type="text/css" href="/branch.css">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
      
      
    </head>
    <body>
        <!--navbar container-->
        <div class="navbar-container">
            <a href="/" style="text-decoration: none; cursor: pointer;"><div class="app-name">Amhara Unity</div></a>

            <!--
             <a href="/join-branch" style="text-decoration: none;"><button class="write-btn" id="join-btn">Join</button></a>
            -->
        </div>

        <!--branch header-->
        <div class="branch-header">
            <!--branch name-->
            <h2 class="branch-name"><span style="color: #007F73; font-family: Clash Display;text-decoration: underline;"> <%= branch.name %></span> <span style="font-size: 14px;display: none;">(<%= branch.numMembers %> members)</span> </h2>
        </div>

        
        <!--important branch info-->
        <div class="branch-imp">
            <div class="leaders">
                <article class="flow">
                    <h1>Our Team</h1>
                    <p>Meet the brilliant people behind our <%=branch.name %> branch.</p>
                    <div class="team">
                      <ul class="auto-grid" role="list">
                        <li>
                          <a href="" target=_blank" class="profile">
                            <h2 class="profile__name">To be elected</h2>
                            <p>Founder</p>
                            <img alt="Anita Simmons" src="/images/ethiopia.png" />
                          </a>
                        </li>
                        <li>
                          <a href="" target=_blank" class="profile">
                            <h2 class="profile__name">To be elected</h2>
                            <p>Communications Director</p>
                            <img alt="Profile shot for Celina Harris" src="/images/ethiopia.png" />
                          </a>
                        </li>
                        <li>
                          <a href="" target=_blank" class="profile">
                            <h2 class="profile__name">To be elected</h2>
                            <p>Finance Lead</p>
                            <img alt="Profile shot for Ruby Morris" src="/images/ethiopia.png" />
                          </a>
                        </li>
                        <li>
                          <a href="" target=_blank" class="profile">
                            <h2 class="profile__name">To be elected</h2>
                            <p>Secretary</p>
                            <img alt="Profile shot for Nicholas Castro" src="/images/ethiopia.png" />
                          </a>
                        </li>
                        <li>
                          <a href="" target=_blank" class="profile">
                            <h2 class="profile__name">To be elected</h2>
                            <p>Associate Executive</p>
                            <img alt="Profile shot for Marc Dixon" src="/images/ethiopia.png" />
                          </a>
                        </li>
                        <li>
                          <a href="" target=_blank" class="profile">
                            <h2 class="profile__name">To be elected</h2>
                            <p>Associate Executive</p>
                            <img alt="Profile shot for Chad" src="/images/ethiopia.png" />
                          </a>
                        </li>
                      </ul>
                    </div>
                  </article>
                  
            </div>

            <!--announs start-->
            <div class="announs">
                <span style="font-weight: bold;font-size: 20px; text-align: center; padding: 2vh 2vw;margin-top: 2vh;margin-bottom: 2vh;color: #007F73;">Branch Announcements</span>
                
                
                  <% if (anons.length != 0) { %>
                    <% anons.forEach((item, index) => { %>
                      <div class="announs-detail">
                        <div class="announs-header"><%= item.title %></div><br>
                        <div class="announs-date"><%= item.postedOn %></div>
                    </div>
                      <% }); %>
    
                <% } else { %>
                    <br><br><strong>No specific announcements for <%= branch.name %> yet</strong>
                <% } %>
            
      
                
            </div>
            <!--announs end-->
        </div>

        <!--footer-->
        <footer>
            <div class="footer">
                <section class="contacts">
                    <h3>Contact</h3><br><br>
                    <span>info@amharaunity.com</span><br>

                </section>
                <section class="legals">
                    <h3>Legals</h3><br><br>
                    <span>Privacy Policy</span><br>
                    <span>Terms and Conditions of Use</span>

                </section>

                <!--socials-->
                <section class="share">
                  <h3>Share</h3><br><br>
                  <div class="share-buttons">
                      <span><a href="#" class="share-button facebook" id="share-facebook"><i class="fab fa-facebook-f" style="font-size: 20px; margin: 0 0.2vw;"></i></a></span>
                      <span><a href="#" class="share-button twitter" id="share-twitter"><i class="fab fa-twitter" style="font-size: 20px; margin: 0 0.2vw;"></i></a></span>
                      <span><a href="#" class="share-button whatsapp" id="share-whatsapp"><i class="fab fa-whatsapp" style="font-size: 20px; margin: 0 0.2vw;"></i></a></span>
                      <span><a href="#" class="share-button email" id="share-email"><i class="fas fa-envelope" style="font-size: 20px; margin: 0 0.2vw;"></i></a></span>
                      <span><a href="#" class="share-button linkedin" id="share-linkedin"><i class="fab fa-linkedin-in" style="font-size: 20px; margin: 0 0.2vw;"></i></a></span>
                      <span><a href="#" class="share-button sms" id="share-sms"><i class="fas fa-sms" style="font-size: 20px; margin: 0 0.2vw;"></i></a></span>
              
                  </div>
              
              </section>


            </div>
        </footer>

        <script>
          document.getElementById('share-facebook').addEventListener('click', function() {
            const url = encodeURIComponent(window.location.href);
            const text = encodeURIComponent(document.title);
            window.open(`https://www.facebook.com/sharer/sharer.php?u=${url}&quote=${text}`, 'sharer', 'width=626,height=436');
        });

        document.getElementById('share-twitter').addEventListener('click', function() {
            const url = encodeURIComponent(window.location.href);
            const text = encodeURIComponent(document.title);
            window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, 'sharer', 'width=626,height=436');
        });

        document.getElementById('share-whatsapp').addEventListener('click', function() {
            const url = encodeURIComponent(window.location.href);
            const text = encodeURIComponent(document.title);
            window.open(`https://api.whatsapp.com/send?text=${text}%20${url}`, 'sharer', 'width=626,height=436');
        });

        document.getElementById('share-email').addEventListener('click', function() {
            const url = encodeURIComponent(window.location.href);
            const subject = encodeURIComponent(document.title);
            const body = encodeURIComponent(`Check out this page: ${url}`);
            window.location.href = `mailto:?subject=${subject}&body=${body}`;
        });

        document.getElementById('share-linkedin').addEventListener('click', function() {
            const url = encodeURIComponent(window.location.href);
            const title = encodeURIComponent(document.title);
            const summary = encodeURIComponent('Check out this page:');
            window.open(`https://www.linkedin.com/shareArticle?mini=true&url=${url}&title=${title}&summary=${summary}`, 'sharer', 'width=626,height=436');
        });

        document.getElementById('share-sms').addEventListener('click', function() {
            const url = encodeURIComponent(window.location.href);
            const text = encodeURIComponent(document.title);
            window.open(`sms:?&body=${text}%20${url}`);
        });



        </script>
        

        


    

        
    </body>
</html>