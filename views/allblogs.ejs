<!DOCTYPE html>
<html>
    <head>
        <title>Amhara Unity | Blog</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/png" sizes="32x32" href="./images/favicon-32x32.png">
        <link rel="stylesheet" type="text/css" href="/allblogs.css">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    </head>

    <body>
       


        <div class="navbar-container">
            <a href="/" style="text-decoration: none; cursor: pointer;"><div class="app-name">Amhara Unity</div></a>
            <a href="/submit-a-blog/<%= userID%>" style="text-decoration: none;"><button class="write-btn">Write</button></a>
        </div>

        <div class="blogs-container">
            <% if (blogs.length == 0) { %>
                <div class="no-blogs">
                    <div class="no-blog-button"><a href="/submit-a-blog/<%= userID%>" style="text-decoration: none;"><button>Write</button></a></div>
                </div>

            <% } else { %>
                <div class="main-blogs">
                    <% for (let i = 0; i < blogs.length; i++) { %>

                            <a href="/blog/<%= blogs[i]._id%>" style="text-decoration: none;">
                                <div class="a-blog-container">
                                    <div class="blog-content">
                                        <div class="poster-info">
                                            <span class="postedBy"><%= blogs[i].postedBy %></span> |
                                            <span class="postedOn"><%= blogs[i].postedOn %></span><br><br>
                                        </div>
                                        <div class="blog-text">
        
                                            <% if (Array.isArray(blogs[i].title)) { %>
                                                <h2 class="blog-title"><%= blogs[i].title[0] %></h2>
        
                                              <% } else { %>
                                                <h2 class="blog-title"><%= blogs[i].title %></h2>
                                              <% } %>
                                            
                                            <p class="blog-desc"><%= blogs[i].desc %> </p>
                                        </div>
                                    </div>
                                    <div class="blog-image">
                                        
                                            <img src="/images/ethiopia.png" alt="">
                    
                                        
                                    </div>
                                </div>
                                
                            </a>
                            
    

                        
                <% } %>
        
                    
                </div>
                
                
            <% } %>
        

            <!--
                
            -->
            <% if (ads.length == 0) { %>
                <div class="ad-blogs" style="display: none;">2</div>

            <% } else { %>
                <div class="ad-blogs">2</div>

            <% } %>
        
        </div>

    </body>
    
</html>