    <body>

      

        <div class="navbar-container">
          <a href="/" style="text-decoration: none; cursor: pointer;"><div class="app-name">Amhara Unity</div></a>
        </div>

        <section class="form-section">
          <form action="/admin/announcement" method="POST" class="blog-form" id="blog-form">
            <input type="text" placeholder="Your announcement" id="desc" name="title" style="width: 100%;height: 7vh;border: 1px solid #ddd;margin-bottom: 1vh;"><br>
            <label for="options"></label>
            <select id="options" name="branchOption" style="width: 100%;height: 7vh;border: 1px solid #ddd;margin-bottom: 1vh;">
                <option value="question">What branch is this announcement for?</option>
                <option value="All branches">All branches</option>
                <option value="Arizona & New Mexico">Arizona & New Mexico</option>
                <option value="California">California</option>
                <option value="The Carolinas">The Carolinas</option>
                <option value="Colorado">Colorado</option>
                <option value="DC, Maryland, & Virginia">DC, Maryland, & Virginia</option>
                <option value="Florida">Florida</option>
                <option value="Georgia">Georgia</option>
                <option value="Illinois">Illinois</option>
                <option value="Kansas">Kansas</option>
                <option value="Louisiana">Louisiana</option>
                <option value="Michigan">Michigan</option>
                <option value="Minnesota">Minnesota</option>
                <option value="Nevada">Nevada</option>
                <option value="New England">New England</option>
                <option value="New York">New York</option>
                <option value="Ohio">Ohio</option>
                <option value="Oregon">Oregon</option>
                <option value="Pennsylvania">Pennsylvania</option>
                <option value="Tennessee">Tennessee</option>
                <option value="Texas">Texas</option>
                <option value="Upper Midwest (ID, MT, WY, UT, ND, SD, & NE)">Upper Midwest (ID, MT, WY, UT, ND, SD, & NE)</option>
                <option value="Washington">Washington</option>

            </select>
    
            <input type="submit" style="background-color: #007F73;border: 1px solid #007F73;color: white;border-radius: 5px;cursor: pointer;">

          </form>
        </section>

        
